import pandas as pd
import glob
import os

# Set your folder path
folder_path = r'/path/to/your/folder'

# Get all .coax files in the folder
file_list = glob.glob(os.path.join(folder_path, '*.coax'))

# Initialize empty list to collect DataFrames
df_list = []

# Loop through files and read from row 4 (i.e., skip first 3 rows)
for file in file_list:
    df = pd.read_csv(file, skiprows=3)  # row 4 is index 3 (0-based)
    df_list.append(df)

# Concatenate all into one DataFrame
combined_df = pd.concat(df_list, ignore_index=True)

# Optional: Drop duplicate header rows if some files contain repeated headers
combined_df = combined_df[combined_df[combined_df.columns[0]] != df.columns[0]]

# Show result
print(combined_df.head())