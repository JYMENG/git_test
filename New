let
    AddBusinessDays = (start as date, days as number) as date =>
    let
        DayCounter = List.Accumulate({1..days}, start, (currentDate, _) => 
            let
                NextDate = Date.AddDays(currentDate, 1)
            in
                if Date.DayOfWeek(NextDate, Day.Sunday) < 5
                then NextDate
                else Date.AddDays(NextDate, 1)
        )
    in
        DayCounter
in
    AddBusinessDays([OrderDate], 5)