import pandas as pd

# File name
excel_file = "your_file.xlsx"

# Load the Excel file using openpyxl engine
xls = pd.ExcelFile(excel_file, engine="openpyxl")

# Get header from row 6 (index 5) of the first sheet
columns = pd.read_excel(excel_file, sheet_name=xls.sheet_names[0], header=5, nrows=0, engine="openpyxl").columns

# Read all sheets, skipping first 6 rows (header is row 6)
dataframes = []
for sheet in xls.sheet_names:
    df = pd.read_excel(excel_file, sheet_name=sheet, skiprows=6, header=None, engine="openpyxl")
    if not df.empty:
        df.columns = columns  # Apply unified header
        dataframes.append(df)

# Combine all data into one DataFrame
combined_df = pd.concat(dataframes, ignore_index=True)

# Save the final result
combined_df.to_excel("combined_output.xlsx", index=False)