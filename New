NewColumn = 
VAR PreviousRowValue = 
    IF(
        EARLIER('Table'[ID]) <> BLANK(),
        CALCULATE(MAX('Table'[YourColumn]), FILTER('Table', 'Table'[ID] = EARLIER('Table'[ID]) - 1))
    )
RETURN 
    IF(
        ISBLANK(PreviousRowValue),
        1,  // Assign 1 to the first row
        IF(
            'Table'[YourColumn] = PreviousRowValue,
            PreviousRowValue,  // Keep the previous value if the current and previous values are the same
            PreviousRowValue + 1  // Increment the value if different from the previous row
        )
    )