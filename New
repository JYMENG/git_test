import pandas as pd

# Load the Excel file
excel_file = "your_file.xlsx"
xls = pd.ExcelFile(excel_file)

# Parse all sheets using row 6 as header
dataframes = [xls.parse(sheet, header=5) for sheet in xls.sheet_names]

# Standardize columns using the first sheet
columns = dataframes[0].columns
dataframes = [df for df in dataframes if not df.empty]  # Remove empty sheets if any

# Remove headers from subsequent sheets by enforcing same columns
combined_df = pd.concat([df for df in dataframes], ignore_index=True)
combined_df.columns = columns  # Ensure consistent column headers

# Save the combined result
combined_df.to_excel("combined_output.xlsx", index=False)