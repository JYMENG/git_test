%macro clean_string(input_str);
    %let cleaned_str = %sysfunc(tranwrd(&input_str, %str('), %str()));  /* Remove single quotes */
    %let cleaned_str = %sysfunc(tranwrd(&cleaned_str, %str(-), %str()));  /* Remove hyphens */
    
    &cleaned_str
%mend clean_string;

/* Test the macro */
%let test_string = 'Hello-World-"Test"-String';
%let result = %clean_string(&test_string);

%put &result;