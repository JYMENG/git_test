def process_file(file_path, target_char, expected_count):
    with open(file_path, 'r') as file:
        prev_line = None
        for line in file:
            line = line.strip()
            count = line.count(target_char)

            if count < expected_count:
                if prev_line:
                    # Concatenate the current line with the previous line
                    prev_line += " " + line
                    count += prev_line.count(target_char)
                else:
                    prev_line = line
            else:
                if prev_line:
                    # Output the previous concatenated line
                    print(prev_line)
                    prev_line = None
                # Output the current line
                print(line)
        
        # Print any remaining concatenated line
        if prev_line:
            print(prev_line)

# Example usage:
process_file('input.txt', ',', 2)