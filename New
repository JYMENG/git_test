%macro import_excel(file=, sheet=, out=);

    /* Step 1: Sanitize the sheet name (replace curly apostrophes with straight ones) */
    %local cleansheet;
    %let cleansheet = %sysfunc(translate(&sheet, %str(%'), %str(’)));  /* ’ → ' */

    /* Step 2: Enclose in double quotes for PROC IMPORT sheet= */
    proc import datafile="&file"
        out=&out
        dbms=xlsx
        replace;
        sheet="&cleansheet";  /* double-quoted for spaces and quotes */
        getnames=yes;
    run;

%mend;