import pandas as pd
from xbrl import XBRLParser, GAAP, GAAPSerializer

# Parse the XBRL file
xbrl_parser = XBRLParser()
xbrl = xbrl_parser.parse("your_xbrl_file.xml")

# Extract data (assuming US GAAP for this example)
gaap_obj = xbrl_parser.parseGAAP(xbrl, doc_date="2024-07-20", context="current", ignore_errors=0)

# Serialize to dictionary
gaap_serializer = GAAPSerializer()
gaap_data = gaap_serializer.dump(gaap_obj)

# Convert to DataFrame
df = pd.DataFrame(gaap_data)

# Save to Excel
df.to_excel("output.xlsx", index=False)