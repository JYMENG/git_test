%macro upcase_vars(lib=work, data=your_dataset);

    proc sql noprint;
        select name, cats(name, "=", upcase(name))
        into :varlist separated by ' ',
             :renames separated by ' '
        from dictionary.columns
        where libname = upcase("&lib.") and memname = upcase("&data.");
    quit;

    data &lib..&data;
        set &lib..&data;
    run;

    proc datasets lib=&lib nolist;
        modify &data;
        rename &renames;
    quit;

%mend;

%upcase_vars(lib=work, data=mydata);  /* Replace 'mydata' with your dataset name */