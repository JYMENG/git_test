FilteredSummarizedTable = 
SUMMARIZE(
    CALCULATETABLE(
        ExistingTable, 
        ExistingTable[Region] IN VALUES(ExistingTable[Region])  -- Slicer-driven filter
    ),
    ExistingTable[Category],                        -- Row 1
    ExistingTable[SubCategory],                     -- Row 2
    ExistingTable[Year],                            -- Column
    "Total Sales", SUM(ExistingTable[SalesAmount])  -- Summarized Value
)