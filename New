data convert_timezone;
   set your_data;
   /* Extract date part */
   dt_date = datepart(gmt_datetime);

   /* Set the default offset to 5 hours for EST (standard time) */
   offset = -5;

   /* Check for daylight saving time (between March and November) */
   if month(dt_date) >= 3 and month(dt_date) <= 11 then do;
      /* For simplicity, you might refine this with exact rules */
      offset = -4; /* Use 4-hour offset for EDT (daylight saving time) */
   end;

   /* Adjust the datetime value by adding the offset in hours (converted to seconds) */
   ny_datetime = gmt_datetime + (offset * 3600);
run;