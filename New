import pandas as pd

# Example DataFrame
df = pd.DataFrame({
    "id": [1, 2, 3, 4],
    "name": ["apple", "fizz", "ZZtop", "banana"],
    "desc": ["ok", "zzz test", "great", "fine"]
})

# Drop rows where *any column value* contains "zz" or "zzz" (case-insensitive)
mask = df.astype(str).apply(lambda x: x.str.contains(r"zz+", case=False, na=False)).any(axis=1)
df_filtered = df[~mask]

print(df_filtered)