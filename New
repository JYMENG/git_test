import os

def process_file(file_path, target_char, expected_count):
    with open(file_path, 'r') as file:
        prev_line = None
        for line in file:
            line = line.strip()
            count = line.count(target_char)

            if count < expected_count:
                if prev_line:
                    # Concatenate the current line with the previous line
                    prev_line += " " + line
                    count += line.count(target_char)
                else:
                    prev_line = line
            else:
                if prev_line:
                    # Output the previous concatenated line
                    print(prev_line)
                    prev_line = None
                # Output the current line
                print(line)
        
        # Print any remaining concatenated line
        if prev_line:
            print(prev_line)

def process_folder(folder_path, target_char, expected_count):
    for filename in os.listdir(folder_path):
        file_path = os.path.join(folder_path, filename)
        if os.path.isfile(file_path):
            print(f"\nProcessing file: {filename}")
            process_file(file_path, target_char, expected_count)

# Example usage:
process_folder('path/to/your/folder', ',', 2)