import pandas as pd
import glob
import os

# Set the folder containing your .xlsx files
folder_path = r'/path/to/your/folder'

# Get all .xlsx files in the folder
file_list = glob.glob(os.path.join(folder_path, '*.xlsx'))

# Initialize a list to collect DataFrames
df_list = []

for file in file_list:
    # Read from row 4 (skip first 3 rows)
    df = pd.read_excel(file, skiprows=3)
    df_list.append(df)

# Concatenate all DataFrames into one
combined_df = pd.concat(df_list, ignore_index=True)

# Optional: Drop rows where the first column contains the repeated header label
# (in case headers are repeated inside the data)
combined_df = combined_df[combined_df[combined_df.columns[0]] != df.columns[0]]

# Save the combined DataFrame to a CSV or Excel file
combined_df.to_excel('combined_output.xlsx', index=False)

# Print a preview
print(combined_df.head())