

import os

# Folder path containing the files
folder_path = '/path/to/your/folder'

# List to store lines from all files
lines = []

# Iterate through files in the folder
for filename in os.listdir(folder_path):
    if filename.endswith('.txt'):  # Adjust file extension as needed
        file_path = os.path.join(folder_path, filename)
        with open(file_path, 'r') as file:
            # Read the first non-empty line from each file
            for line in file:
                if line.strip():  # Check if the line is not empty
                    lines.append(line.strip())
                    break  # Move to the next file after reading the first line

# Write the first non-duplicate line to a new file
output_file_path = '/path/to/your/output_file.txt'
with open(output_file_path, 'w') as output_file:
    seen_lines = set()
    for line in lines:
        if line not in seen_lines:
            output_file.write(line + '\n')
            seen_lines.add(line)
            break  # Stop after writing the first non-duplicate line

print(f"First non-duplicate line written to '{output_file_path}'")

