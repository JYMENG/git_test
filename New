FilteredDynamicPivotTable = 
SUMMARIZE(
    FILTER(
        'YourTable',
        'YourTable'[SomeColumn] = "SomeValue"  -- Apply your filter condition here
    ),
    'YourTable'[PivotColumn1],
    'YourTable'[PivotColumn2],
    "Measure1", CALCULATE(SUM('YourTable'[MeasureColumn]), ALL('YourTable'[PivotColumnToExclude])),
    "Measure2", CALCULATE(SUM('YourTable'[AnotherMeasure]), ALL('YourTable'[PivotColumnToExclude]))
)