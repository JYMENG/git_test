import re

# Define the input and output file paths
input_file_path = 'input_file.csv'
output_file_path = 'output_file.csv'

# Compile a regex pattern to match and remove everything before the first comma
pattern = re.compile(r'^[^,]*,')

# Open the input file for reading and output file for writing
with open(input_file_path, 'r', newline='') as infile, open(output_file_path, 'w', newline='') as outfile:
    # Read the file line by line
    for line in infile:
        # Use regex to remove everything before the first comma
        cleaned_line = pattern.sub('', line)
        # Write the cleaned line to the output file
        outfile.write(cleaned_line)

print(f"Processed file saved as {output_file_path}")