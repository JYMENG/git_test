import xml.etree.ElementTree as ET

# Parse the XBRL file
tree = ET.parse('your_xbrl_file.xbrl')
root = tree.getroot()

# Define the namespaces (you can find them in your XBRL file)
namespaces = {
    'xbrli': 'http://www.xbrl.org/2003/instance',
    'link': 'http://www.xbrl.org/2003/linkbase',
    'xlink': 'http://www.w3.org/1999/xlink',
    # Add other namespaces as needed
}

# Find all context elements (example)
contexts = root.findall('.//xbrli:context', namespaces)
for context in contexts:
    print(context.attrib)  # Do something with the context data

# Find all fact elements (example)
facts = root.findall('.//xbrli:fact', namespaces)
for fact in facts:
    print(fact.tag, fact.text)  # Do something with the fact data

from openpyxl import Workbook

# Create a workbook and select the active worksheet
wb = Workbook()
ws = wb.active

# Write headers (example)
headers = ['Element', 'Value']
ws.append(headers)

# Write data (example)
for fact in facts:
    row = [fact.tag, fact.text]
    ws.append(row)

# Save the workbook
wb.save('output.xlsx')
